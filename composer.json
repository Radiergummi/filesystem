{
    "name": "radiergummi/filesystem",
    "description": "A simple and modern filesystem abstraction layer for PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Moritz Friedrich",
            "email": "moritz.friedrich@gmail.com"
        }
    ],
    "require": {
        "sunrise/stream": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/simple-cache": "^1.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Radiergummi\\FileSystem\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "Radiergummi\\FileSystem\\Tests\\": "tests/"
    }
}
